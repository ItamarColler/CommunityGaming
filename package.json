{
  "name": "community-gaming",
  "version": "0.1.0",
  "private": true,
  "description": "Realtime, event-driven social platform for gamers",
  "packageManager": "pnpm@10.18.3",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --concurrency=20",
    "dev:web": "turbo run dev --filter=@community-gaming/web",
    "dev:api": "turbo run dev --filter=@community-gaming/api-gateway --filter=@community-gaming/ws-gateway",
    "dev:services": "turbo run dev --filter=./services/*",
    "lint": "eslint \"apps/**/*.{ts,tsx}\" \"services/**/*.{ts,tsx}\" \"packages/**/*.{ts,tsx}\" --max-warnings=0",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "db:migrate": "turbo run db:migrate",
    "db:seed": "turbo run db:seed",
    "db:studio": "turbo run db:studio"
  },
  "devDependencies": {
    "@turbo/gen": "^2.6.0",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "prettier": "^3.2.5",
    "turbo": "^2.6.0",
    "typescript": "^5.9.3"
  },
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ]
}
